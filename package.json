{
  "name": "forky",
  "version": "0.1.0",
  "description": "CLI tool for porting open source projects to different languages using local LLM",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "forky": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "cli",
    "llm",
    "porting",
    "translation",
    "code-conversion"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "glob": "^10.3.0",
    "ora": "^8.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
